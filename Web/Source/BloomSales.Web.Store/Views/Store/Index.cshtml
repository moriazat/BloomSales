@model System.String

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <!--navigation-->
        @Html.Action("CategoriesList")

        <div id="productsList" class="col-md-9">
            @if (Model.IsEmpty())
            {
                <!--catalog front page-->
                @Html.Partial("CatalogFrontPage");
            }
            else
            {
                <!--list of products-->
                @Html.Action("Products", new { categoryName = Model })
            }
        </div>
    </div>
</div>

@section styles
{
    @Styles.Render("~/Content/shop-homepage.css")
}