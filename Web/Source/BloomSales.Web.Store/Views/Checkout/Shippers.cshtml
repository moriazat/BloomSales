@model IEnumerable<BloomSales.Data.Entities.Shipper>

<div class="form-group">
    @using (Ajax.BeginForm("DeliveryServices", new { }, new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "services", InsertionMode = InsertionMode.Replace }, new { id = "shippingCompany" }))
    {
        <div class="col-md-3">
            <label class="control-label">Shipping Company:</label>
        </div>
        <select class="form-control" onchange="shipperChanged()" name="shipperName">
            @foreach (var shipper in Model)
            {
                <option value="@shipper.Name">@shipper.Name</option>
            }
        </select>

    }
</div>